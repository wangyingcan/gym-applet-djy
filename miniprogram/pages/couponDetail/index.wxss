.coupon-item{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 20rpx;
    border-bottom: 1rpx solid #f6f6f6;
}

.coupon-left{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.coupon-right{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.name{
    color: #3D3D3D;
    font-size: 35rpx;
    padding-bottom:10rpx;
}

.desc{
    font-size: 18rpx;
    color: #6b6b6b;
}

.time{
    font-size: 18rpx;
    color: #6b6b6b;
    padding-top:10rpx;
}
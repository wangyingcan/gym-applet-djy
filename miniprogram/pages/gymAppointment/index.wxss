/* 1.自定义导航栏标题 */
.nav-title {
  font-size: 30rpx;
  color: #3D3D3D;
  font-weight: bolder;
}

.fix-notice__bar{
  position: fixed;
  top: 120rpx;
  left: 0;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  overflow: visible;
  z-index: 1;
}

/* 2.0顶部三件套外层view */
.year-date-nextWeek-view {
  display: flex;
  justify-content: space-around;
  width: 100%;
  align-items: center;
  position: fixed;
  top:200rpx;
  z-index: 1;
  background-color: #F5F7F8;
}

/* 2.1.年份展示外部view */
.year-view {
  width: 70rpx;
  height: 50rpx;
  opacity: 1;
  border-radius: 10rpx;
  background: #444444;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 2.2.年份展示内部文本 */
.year-text {
  font-size: 24rpx;
  color: #FFFFFF;
}

/* 2.3.始终日期外部view */
.date-view {
  width: 300rpx;
  height: 70rpx;
  border: black 1rpx solid;
  border-radius: 10rpx;
  opacity: 1;
  background: #F4F4F4;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 2.4.始终日期内部文本 */
.date-text {
  font-size: 48rpx;
  color: #444444;
  font-weight: normal;
  padding: 4rpx;
}

/* 2.5.可用按钮的样式 */
.able_button {
  color: #3D3D3D;
  font-weight: bolder;
}

/* 2.6.可用按钮点击时样式 */
.button-hover {
  opacity: 0.9;
  transform: scale(0.95, 0.95);
  position: relative;
  top: 3rpx;
  left: 3rpx;
  box-shadow: 0rpx 0rpx 16rpx rgba(94, 153, 187, 0.192) inset;
}

/* 3.1.固定周数时间轴外层view */
.week-list {
  position: fixed;
  left: 0;
  top: 325rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  height: 100rpx;
  z-index: 1;
}

/* 3.2.固定周数时间轴月份 */
.now-month {
  width: 50rpx;
  height: 100%;
  background: #F5F7F8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

/* 3.3.固定周数时间轴周数 */
.week-item {
  width: calc((100% - 50rpx)/7);
  height: 100%;
  background: #F5F7F8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

/* 3.3.1.周数显示文本 */
.week-name {
  font-size: 24rpx;
  color: #444444;
}

/* 3.3.2.周日期显示文本 */
.week-date {
  font-size: 20rpx;
  color: #a1a1a1;
}

/* 3.3.3.高亮显示 */
.week-item.active {
  width: calc((100% -50rpx)/7 - 15rpx);
  background: #444444;
  border-radius: 20rpx;
}

.week-date.active {
  color: #fff;
}

.week-name.active {
  color: white;
}

/* 4.1左侧固定时间轴 */
.course-content {
  width: 100%;
  padding-top: 306rpx;
  display: flex;
  box-sizing: border-box;
  z-index: -1;
}

.course-nums {
  width: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f6f7;
}

.course-num {
  height: 120rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  font-size: 24rpx;
  color: #999999;
  border-width: 0rpx 0rpx 2rpx 0rpx;
  border-style: dashed;
  border-color: #DEDEDF;
}

/* 4.2 课程块展示区 */
.course-list {
  width: 100%;
  height: 100%;
  position: relative;
}

.course-item {
  position: absolute;
  width: calc((100% - 50rpx) / 7);
  padding: 2rpx;
}

.course-item__content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  border: 4rpx solid black;
  font-size: 24rpx;
  color: #3D3D3D;
  text-align: center;
}

/* 可预约状态 */
.course-item__content.status1 {
  border: 4rpx solid rgba(56, 239, 125, 0.651);
  background-color: white;
  height:calc(100% - 8rpx);
  width:calc(100% - 8rpx);
}

/* 已预约状态 */
.course-item__content.status2 {
  border: 4rpx solid rgba(248, 0, 8, 0.651);
  background: #fff;
}

/* 未到达开放时间状态 */
.course-item__content.status3 {
  border: 4rpx solid #000000;
  background: rgba(153, 153, 153, 0.75);
}
.nav-title {
  font-size: 30rpx;
  color: #3D3D3D;
  font-weight: bolder;
}

/* 0.顶部登录、注册逻辑样式 */
.outter-view{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.user-content{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-button {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  padding: 0;
  margin: 0
}

.avatar-wrapper::after{ border: none; }
.avatar-wrapper image{
  width: 100%;
  height: 100%;
}
 
.container {
  display: flex;
}
 
.nickname-input {
  width: 608rpx;
  height: 108rpx;
  line-height: 112rpx;
  border-radius: 0;
  opacity: 1;
  box-sizing: border-box;
 
  font-size: 32rpx; 
  font-weight: 400;
  color: #000000;
 
  text-align: center;
  margin-bottom: 24rpx;
}
 
.user-confirm-btn{
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background: #B2B2B2;
  border-radius: 50rpx;
  opacity: 1;
  border: 0;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  }
.user-confirm-btn::after{ border: none; }
.user-confirm-btn--disabled{
  background: #B2B2B2;
}
.user-confirm-btn--enabled{
  background: #46a125;
}

/* 1.整个页面布局 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
}

/* 2.个人信息展示区外部view */
.userInfo-view {
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.avatar-image{
  width:160rpx;
  height:160rpx;
  border-radius:50%
}

.nickname{
  font-size: 32rpx;
  font-weight: bolder;
  color: #3D3D3D;
  padding-top: 30rpx;
}

/* 2.2用户信息区 */
.userInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 160rpx;
  width: 70%;
}

/* 2.2.1用户昵称字体 */
.user-nickname {
  color: #3D3D3D;
  font-size: 48rpx;
  font-weight: bolder;
  padding-left: 30rpx;
}

/* 3.用户过去课程状态信息 */
.user-class__record {
  display: flex;
  width: 95%;
  padding-top: 60rpx;
  box-sizing: border-box;
}

/* 3.1左侧外层view */
.booked-class__num {
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1rpx solid #000;
}

/* 3.2中侧外层view */
.monthly-class__record {
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1rpx solid #000;
}

/* 3.3右侧外层view */
.cancel-class__num {
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 3.1.1顶部字体 */
.top-text {
  color: #3D3D3D;
  font-size: 36rpx;
}


/* 3.1.2底部数字字体 */
.buttom-number {
  color: #3D3D3D;
  font-size: 72rpx;
}

/* 4.个人课表展示 */
.personal-classTable{
  width:95%;
  box-sizing: border-box;
  padding-top:60rpx;
}

/* 5.卡包展示区外层view */
.card-pack__view{
  width:95%;
  box-sizing: border-box;
  padding-top:60rpx;
}

/* 6.其余设置的外层view */
.other-settings{
  width:95%;
  box-sizing: border-box;
  padding-top:60rpx;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:100%;
}

.title{
  font-size: 40rpx;
  font-weight: bolder;
  color: #3D3D3D;
  padding-top: 30rpx;
}

.detail{
  width: 95%;
  padding-top: 30rpx;
  font-size: 35rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: column;
}

.detail text{
  color: #3D3D3D;
  font-size: 35rpx;
  line-height: 40rpx;
  padding-bottom: 20rpx;
}